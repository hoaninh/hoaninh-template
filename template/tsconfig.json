{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@components": ["src/components/index"],
      "@app/*": ["src/app/*"],
      "@app": ["src/app/index"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils/index"],
      "@api/*": ["src/api/*"],
      "@api": ["src/api/index"],
      "@assets/*": ["src/assets/*"],
      "@assets": ["src/assets/index"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks/index"],
      "@network/*": ["src/network/*"],
      "@network": ["src/network/index"],
      "@store/*": ["src/store/*"],
      "@store": ["src/store/index"],
      "@navigation/*": ["src/navigation/*"],
      "@navigation": ["src/navigation/index"],
      "@theme/*": ["src/theme/*"],
      "@theme": ["src/theme/index"],
      "@model/*": ["src/model/*"],
      "@model": ["src/model/index"],
      "@storage/*": ["src/storage/*"],
      "@storage": ["src/storage/index"],
      "@splash/*": ["src/splash/*"],
      "@splash": ["src/splash/index"],
      "@auth/*": ["src/auth/*"],
      "@auth": ["src/auth/index"],
      "@home/*": ["src/home/*"],
      "@home": ["src/home/index"],
      "@search/*": ["src/search/*"],  
      "@search": ["src/search/index"],
      "@setting/*": ["src/setting/*"],
      "@setting": ["src/setting/index"],
      "@localization/*": ["src/localization/*"],
      "@localization": ["src/localization/index"]
    }
  }
}
